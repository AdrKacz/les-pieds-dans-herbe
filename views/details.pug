extends layout


block content
  div.modal.text-center#calendar
    div.modal-dialog
      div.modal-content
        div.modal-header
          h5.modal-title Calendrier
          button.close(type='button', data-dismiss='modal', aria-lable='Close')
            span(aria-hidden='true') &times;
        div.modal-body
          div.container-fluid
            div.row.mb-3
              div.col.text-left
                button.btn.btn-secondary#previous(type='button') &lt;
              div.col.btn#month Month
              div.col.text-right
                button.btn.btn-secondary#next(type='button') &gt;
            div.row.mb-3
              div.col.px-1 L
              div.col.px-1 M
              div.col.px-1 M
              div.col.px-1 J
              div.col.px-1 V
              div.col.px-1 S
              div.col.px-1 D    
            div#calendar-dates 
        div.modal-footer
          button.btn.btn-secondary(type='button', data-dismiss='modal') Fermer
          //-button.btn.btn-primary(type='button') Sauvegarder
    
  
  div.carousel.slide.h-100.mb-5#carousel-details(data-ride='carousel')
    ol.carousel-indicators
      li.active(data-target='#carousel-details', data-slide-to='0')
      li(data-target='#carousel-details', data-slide-to='1')
      li(data-target='#carousel-details', data-slide-to='2')
      li(data-target='#carousel-details', data-slide-to='3')
    div.carousel-inner
      div.carousel-item.active(data-interval='5000')
        img.d-block.img-fluid(src='/images/house-dane-deaner-qRfMB-IOQjE-unsplash.jpg')
      div.carousel-item(data-interval='5000')
        img.d-block.img-fluid(src='/images/house-jakari-ward-kJcSb3aLOLo-unsplash.jpg')
      div.carousel-item(data-interval='5000')
        img.d-block.img-fluid(src='/images/house-phil-hearing-U7PitHRnTNU-unsplash.jpg')
      div.carousel-item(data-interval='5000')
        img.d-block.img-fluid(src='/images/house-sidekix-media-r_y2VBvEOIE-unsplash.jpg')
    a.carousel-control-prev(href='#carousel-details', role='buttons', data-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.sr-only Previous
    a.carousel-control-next(href='#carousel-details', role='buttons', data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next    
  
  form(method='POST', action='')
    div.container
      div.row
        div.col.col-lg-4.offset-lg-4.mb-5.text-center
          button.btn.btn-primary#calendar-button(type='button', data-toggle='modal', data-target='#calendar') Choisir ses dates
          input.btn.btn-outline-primary.btn-block.rounded-pill#calendar-input(type='hidden', name='dates', value='')
      div.row
        div.col-12.col-lg-4.mb-3
          label.w-100
            input.d-none.card-input-element(type='checkbox', name='pack-family')
            div.card.card-input
              div.card-body
                h5.card-heading.mb-3 Pack Famille
                p.card-text.text-center 2 vélos<br>Slackline<br>Jeu de boules
                p.card-text.text-center= ' 30 €'
        div.col-12.col-lg-4.mb-3
          label.w-100
            input.d-none.card-input-element(type='checkbox', name='pack-trip', checked)
            div.card.card-input
              div.card-body
                h5.card-heading.mb-3 Pack Voyage
                p.card-text.text-center 4 vélos<br>Slackline<br>Bois de chauffage
                p.card-text.text-center= ' 45 €'
        div.col-12.col-lg-4.mb-3
          label.w-100        
            input.d-none.card-input-element(type='checkbox', name='pack-all')
            div.card.card-input
              div.card-body
                h5.card-heading.mb-3 Pack Intégral
                p.card-text.text-center Pack Famille<br>Pack Voyage<br>Jusqu'à 16 vélos
                p.card-text.text-center= ' 80 €'
      div.row.mb-5
        div.col-12.col-lg-4.offset-lg-2.mb-3.text-center
          p.btn.btn-outline-primary.btn-block.rounded-pill.user-select-none 125 €
        div.col-12.col-lg-4.mb-3.text-center
          button.btn.btn-primary.btn-block.rounded-pill(type='submit') Réserver
  
  
  
block scripts
  script(src="/javascripts/pack-form.js", defer)
  script(src="/javascripts/calendar.js", defer)
  
